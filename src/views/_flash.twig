{% if app.session.flashbag.peekAll() is not empty %}
    <div class="col-xs-12">
        {% for type, flashes in app.session.flashbag.all() %}
            {% for flash in flashes %}
                <div class="alert alert-{{ type }}" role="alert">{{ flash }}</div>
            {% endfor %}
        {% endfor %}
    </div>
{% endif %}